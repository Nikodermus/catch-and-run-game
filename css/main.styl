//Variables
vendor-prefixes = webkit moz o ms official mso xv wap khtml apple prince ah hp ro rim tc
$size = 16
$red = #9C1B00
$green = #10210B


//Mixins
rem(size)
    return size/$size rem

//Preset
@-ms-viewport
    width device-width

html
    box-sizing border-box
    font-size $size px

*
*:after
*:before
    margin 0
    padding 0
    box-sizing inherit
    //transition all ease 0.3s
    &:hover
        //transition all ease 0.3s

a
a:visited
a:focus
    text-decoration none
    color inherit
    &:hover
        text-decoration none
        color inherit

body
    font-family sans-serif
    font-size 1em
    width 100%
    max-width 100vw

h1
h2
h3
h4
h5
h6
    margin 0
    padding 0

img 
    object-fit contain

//Custom Styles

html
body
    box-sizing border-box
    width 100%
    height 100%
    background url('../img/background_3.png')
    background-size 80px 80px
    background-repeat  repeat
    overflow hidden
    border url('../img/border-top.png') 128

*
h1
h2
h3
h4
h5
h6
p
span
    font-family 'doomregular', sans-serif
    color $red
    text-shadow 1px 2px 0 #000000;

button
    border 0
    border-radius 10px
    position relative
    background url('../img/button_bg.png')
    box-shadow inset 2px 2px transparent, 2px 2px 0 1px $green
    &::after
        content ''
        padding-bottom 100%
        display block
    > *
        position absolute
        width 100%
        height 100%
        display flex
        justify-content center
        align-content center
        color $green
        opacity .9
    &:hover
        box-shadow inset 2px 2px $green,  2px 2px 0 1px transparent
        cursor pointer
        filter brightness(.7)
        > *
            opacity 1
            color $red

#CanvasContainer
    width 100%
    height 100%  
    canvas
        background transparent
        position absolute
        top 64px
        left 64px

.corner
    width 64px
    height 64px
    position absolute
    &:nth-of-type(1)
        top 0
        left 0
    &:nth-of-type(2)
        top 0
        right 0
    &:nth-of-type(3)
        bottom 0
        left 0
    &:nth-of-type(4)
        bottom 0
        right 0

 .top
    position absolute
    top 0
    width 100%
    left 0
    bottom unset
    right unset
    z-index 2
    text-align center
    margin auto
    img 
        width 112px
        height auto
        object-fit contain

.border
    position absolute
    background gray
    text-align center
    &:nth-of-type(even)
        width 64px
        height 100%
        top 0
    &:nth-of-type(odd)
        height 64px
        width 100%
        left 0
    &:nth-of-type(1)
        background url('../img/border-top.png')
        top 0
    &:nth-of-type(2)
        background url('../img/border-right.png')
        right 0
        background-position center right
    &:nth-of-type(3)
        background url('../img/border-bottom.png')
        bottom 0
    &:nth-of-type(4)
        background url('../img/border-left.png')
        left 0
    .panel
        width calc(100% - 140px)
        height 80%
        background url('../img/panel.png')
        margin auto
        margin-top 6px
        position relative
        z-index 2
        > figure
            width 100%
            height 100%
            display flex
            align-items center
            justify-content center
            position relative
            img 
                position relative
                z-index 3
            #PowerUp
                position absolute
                margin auto
                top 50%
                left 0
                right 0
                transform translateY(-50%)
                z-index 0
                height 70%

        > div
            width 50%
            position absolute
            top 0
            padding 0 1rem
            height 100%
            display flex
            align-items center
            z-index 10
            &.left
                left 0
                text-align left
                font-size 1.5rem
                
                img 
                    display inline-block
                    margin-right .5rem
            &.right
                text-align right
                justify-content right 
                right 0
                figure
                    margin-top 5px
                button
                    width 40px
                    margin-left 1rem
                    font-size 1.6rem
                    line-height 40px
                